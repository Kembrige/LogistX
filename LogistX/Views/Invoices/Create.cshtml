@model LogistX.Models.Invoice

<h2>Создать инвойс</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="CompanyId">Компания</label>
        <select asp-for="CompanyId" asp-items="ViewBag.Companies" class="form-control"></select>
        <span asp-validation-for="CompanyId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="RouteId">Маршрут</label>
        <select asp-for="RouteId" asp-items="ViewBag.Routes" class="form-control"></select>
        <span asp-validation-for="RouteId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Amount">Сумма</label>
        <input asp-for="Amount" class="form-control" />
        <span asp-validation-for="Amount" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Создать инвойс</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}