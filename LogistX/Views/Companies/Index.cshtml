@model IEnumerable<LogistX.Models.Company>
@{
    ViewData["Title"] = "Companies";
}

<h2>Компании</h2>

<table class="table">
    <thead>
        <tr>
            <th>Имя</th>
            <th>Адрес</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var company in Model)
        {
            <tr>
                <td>@company.Name</td>
                <td>@company.Address</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@company.Id" class="btn btn-warning">Редактировать</a>
                    <a asp-action="Delete" asp-route-id="@company.Id" class="btn btn-danger">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-primary">Добавить Компанию</a>