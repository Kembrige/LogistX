@model LogistX.Models.Route

<h2>Создать маршрут</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="StartLocation"></label>
        <input asp-for="StartLocation" class="form-control" />
        <span asp-validation-for="StartLocation" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="EndLocation"></label>
        <input asp-for="EndLocation" class="form-control" />
        <span asp-validation-for="EndLocation" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="StartDate"></label>
        <input asp-for="StartDate" type="date" class="form-control" />
        <span asp-validation-for="StartDate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="EndDate"></label>
        <input asp-for="EndDate" type="date" class="form-control" />
        <span asp-validation-for="EndDate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DriverId">Водитель</label>
        <select asp-for="DriverId" asp-items="ViewBag.Drivers" class="form-control"></select>
        <span asp-validation-for="DriverId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="RouteStatus">Статус маршрута</label>
        <select asp-for="RouteStatus" asp-items="ViewBag.StatusOptions" class="form-control"></select>
        <span asp-validation-for="RouteStatus" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PricePerTon"></label>
        <input asp-for="PricePerTon" class="form-control" />
        <span asp-validation-for="PricePerTon" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Distance"></label>
        <input asp-for="Distance" class="form-control" />
        <span asp-validation-for="Distance" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Создать маршрут</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}